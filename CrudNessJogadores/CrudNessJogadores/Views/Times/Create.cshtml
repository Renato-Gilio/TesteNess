@model CrudNessJogadores.Models.Times

@{
    ViewData["Title"] = "Criar Jogador";
}

<h1>Criar Jogador</h1>

<h4>Times</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeJogador" class="control-label"></label>
                <input asp-for="NomeJogador" class="form-control" />
                <span asp-validation-for="NomeJogador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posicao" class="control-label"></label>
                <input asp-for="Posicao" class="form-control" />
                <span asp-validation-for="Posicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <select asp-for="Time" class="form-control" id="IdTimes">
                    <option value="SaoPaulo">São Paulo</option>
                    <option value="Corinthians">Corinthians</option>
                    <option value="Palmeiras">Palmeiras</option>
                </select>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success hidden" style="width:100%"/>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary hidden" style="width:100%">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
