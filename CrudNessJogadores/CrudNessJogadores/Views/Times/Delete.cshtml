@model CrudNessJogadores.Models.Times

@{
    ViewData["Title"] = "Excluir Jogador";
}

<h1>Excluir Jogador</h1>

<h3>Tem certeza que deseja excluir o jogador @Model.NomeJogador?</h3>
<div>
    <h4>Times</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeJogador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeJogador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posicao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posicao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger hidden" /> |
        <a asp-action="Index" class="btn btn-secondary hidden">Voltar</a>
    </form>
</div>
