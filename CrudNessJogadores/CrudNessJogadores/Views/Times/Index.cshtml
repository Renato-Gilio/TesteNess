@model IEnumerable<CrudNessJogadores.Models.Times>

@{
    ViewData["Title"] = "Lista de Jogadores";
}

<h1>Lista de Jogadores</h1>

<p>
    <a asp-action="Create"  class="btn btn-success hidden">Adicionar novo jogador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeJogador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeJogador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cores)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning hidden">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-info hidden">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger hidden">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
